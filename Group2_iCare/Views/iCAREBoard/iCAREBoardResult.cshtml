@model IEnumerable<Group2_iCare.Models.PatientRecord>

@{
    ViewBag.Title = "Index";
}

<h2>Patient Records located in </h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BloodGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BedID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TreatmentArea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GeoCodes.Description)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BedID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreatmentArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeoCodes.Descriptoin)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<div>
    <p></p>
    @Html.ActionLink("Back to Worker Dashboard", "Index", "WorkerDashboard")
</div>