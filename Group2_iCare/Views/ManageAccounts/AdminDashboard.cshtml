@model Group2_iCare.Models.iCAREUser

<head>
    <link href="~/Content/admindashboard.css" rel="stylesheet" type="text/css" />
</head>

@{
    var message = TempData["LoginMessage"] as string;
    if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            @message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<body class="admin-container">
    <div class="jumbotron">
        <h1>Admin Dashboard</h1>
    </div>

    <div class="item-container">
        <a href="@Url.Action("Index", "iCAREUsers")" class="card text-decoration-none text-dark item-card">
            <div class="card-body">
                <h5 class="card-title">iCARE Users</h5>
                <p class="card-text">Manage Users</p>
            </div>
        </a>
        <a href="@Url.Action("Index", "iCAREWorkers")" class="card text-decoration-none text-dark item-card">
            <div class="card-body">
                <h5 class="card-title">iCARE Workers</h5>
                <p class="card-text">Manage Workers</p>
            </div>
        </a>
        <a href="@Url.Action("Index", "iCAREAdmins")" class="card text-decoration-none text-dark item-card">
            <div class="card-body">
                <h5 class="card-title">iCARE Admin</h5>
                <p class="card-text">Manage Your Account</p>
            </div>
        </a>
            <a href="@Url.Action("Index", "UserPasswords")" class="card text-decoration-none text-dark item-card">
                <div class="card-body">
                    <h5 class="card-title">iCARE User Passwords</h5>
                    <p class="card-text">Manage Passwords</p>
                </div>
            </a>
            <a href="@Url.Action("Index", "UserRoles")" class="card text-decoration-none text-dark item-card">
                <div class="card-body">
                    <h5 class="card-title">iCARE User Roles</h5>
                    <p class="card-text">Manage User Roles</p>
                </div>
            </a>
            <a href="@Url.Action("AssignPatientForm", "AssignPatient")" class="card text-decoration-none text-dark item-card">
                <div class="card-body">
                    <h5 class="card-title">Assign Patient</h5>
                    <p class="card-text">Assign Patients to Workers</p>
                </div>
            </a>
            <a href="@Url.Action("Index", "DisplayPalette")" class="card text-decoration-none text-dark item-card">
                <div class="card-body">
                    <h5 class="card-title">Display Palette</h5>
                    <p class="card-text">Display GUI Window showing document metadata (e.g. patient info)</p>
                </div>
            </a>
            <a href="@Url.Action("Index", "PatientRecords")" class="card text-decoration-none text-dark item-card">
                <div class="card-body">
                    <h5 class="card-title">Manage Patient Records</h5>
                    <p class="card-text">Manage Patient Records</p>
                </div>
            </a>
            <a href="@Url.Action("Index", "GeoCodes")" class="card text-decoration-none text-dark item-card">
                <div class="card-body">
                    <h5 class="card-title">Manage GeoCodes</h5>
                    <p class="card-text">Manage Geographic Codes</p>
                </div>
            </a>
    </div>

    <div>
        <p></p>
        @Html.ActionLink("Logout", "Logout", "UserAuthentication", new { }, new { @class = "btn btn-outline-primary" })
    </div>
</body>
