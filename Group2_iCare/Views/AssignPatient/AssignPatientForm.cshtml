
@{
    ViewBag.Title = "AssignPatientForm";
}

<h2>Assign Patients</h2>

@using (Html.BeginForm("AssignPatientForm", "AssignPatient", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Patient ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Date of Birth</th>
                <th>Blood Group</th>
                <th>Bed ID</th>
                <th>Treatment Area</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedPatientIds" value="@patient.ID" />
                    </td>
                    <td>@patient.ID</td>
                    <td>@patient.Name</td>
                    <td>@patient.Address</td>
                    <td>@patient.DateOfBirth</td>
                    <td>@patient.BloodGroup</td>
                    <td>@patient.BedID</td>
                    <td>@patient.TreatmentArea</td>
                </tr>
            }
        </tbody>
    </table>

    @*<div class="form-group">
                <label for="workerId">Worker ID:</label>
                <input type="text" name="workerId" id="workerId" class="form-control" required />
        </div>*@

    <p></p>

    <button type="submit" class="btn btn-outline-success">Assign Selected Patients</button>
    @Html.ActionLink("Back to Worker Dashboard", "Index", "WorkerDashboard", null, new { @class = "btn btn-outline-danger" })

}

