@model IEnumerable<Group2_iCare.Models.PatientRecord>

@{
    ViewBag.Title = "Patient Records";
}

<h2>Patient Records located in @ViewBag.SelectedGeoCode</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            DOB
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            Blood Group
        </th>
        <th>
            Bed ID
        </th>
        <th>
            Treatment Area
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BedID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreatmentArea)
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Lookup Form", "iCAREBoardForm", "iCAREBoard", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to Worker Dashboard", "Index", "WorkerDashboard", null, new { @class = "btn btn-primary"})
</div>
