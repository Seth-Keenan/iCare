<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - iCARE System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/navigationBar.css" rel="stylesheet" type="text/css" />
</head>

@{ 
    var cssClass = ViewBag.Title == "Home Page" ? "" : "container body-content";
}

<body>
    
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-container">
            <div class="d-flex flex-row">
                <img src="~/Content/Images/hospIcon.png" alt="Logo" style="height: 40px;" />
                <h2 class="fw-bold nav-title">i<span>CARE</span></h2>
            </div>
            <div class="">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    @if (title == "Home Page" || title == "About iCARE" || title == "Contact Us" || title == "Log In")
                    {
                        <li class="nav-item ps-1">
                            @Html.ActionLink("Log In", "LoginForm", "UserAuthentication", null, new { @class = "btn btn-primary login-btn" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ps-1">
                            @Html.ActionLink("Log Out", "Index", "Home", null, new { @class = "btn btn-primary login-btn" })
                        </li>
                    }
                </ul>
            </div>

    </nav>
    <div class="@cssClass">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Group2</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

