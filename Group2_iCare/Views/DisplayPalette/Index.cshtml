@model (IEnumerable<Group2_iCare.Models.DocumentMetadata>, IEnumerable<Group2_iCare.Models.Files>)

@{
    ViewBag.Title = "Index";
}

<h1>Display Palette</h1>
<hr />

<div class="d-flex align-items-center justify-content-between">
    @Html.ActionLink(
        "View Palette",
        "View",
        null,
        new { @class = "btn btn-outline-danger" }
    )

    @Html.ActionLink(
        "Manage Documents",
        "Index",
        "Documents",
        null,
        new {@class = "btn btn-outline-danger"}
    )

    @Html.ActionLink(
    "Manage Other Documents",
    "Index",
    "Documents",
    null,
    new {@class = "btn btn-outline-danger"}
    )

</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>Doc ID</th>
            <th>Description</th>
        </tr>
    </thead>
    @foreach (var documentMetadata in Model.Item1)
    {
        <tr>
            <td>@Html.DisplayFor(_ => documentMetadata.PatientID)</td>
            <td>@Html.DisplayFor(_ => documentMetadata.DocID)</td>
            <td>@Html.DisplayFor(_ => documentMetadata.Descript)</td>
        </tr>
    }
</table>
<div class="mb-3 d-flex justify-content-end">
    @Html.ActionLink("Back to Dashboard", "Index", "WorkerDashboard", null, new { @class = "btn btn-outline-danger" })
</div>
